/* pages/swiper/swiper.wxss */
.container {
  height: 100%;
}

.is_checked{
  color: #0692f9;
}
.normal{
  color: #eee;
}
 
image {
  position: absolute;
  height: 100%;
  left: 0;
   top: 0;
  display: block;
  width: 100%;
  z-index: -999;
} 
.out {
  margin-top: 65%;
  margin-left:45%;
  margin-right:auto;
  width:150px;
  height:20px;
  border:1px solid #0692f9;
  border-radius:20px;
  overflow:hidden;}
.in {
  height:100%;
  background-color:#0692f9;
}

.swiper {
  flex: 1;
  overflow: scroll;
}
 
.record-item {
  margin-top: 10rpx;
  background-color: white;
  padding-bottom: 5rpx;
  padding-top: 5rpx;
  font-size: 30rpx;
}
 
.name{
  display: flex;
  justify-content: space-between;
  border: 1px solid #eee;
  padding: 2vh;
  border-radius: 10rpx
}

.swiperWrap{
  height: 1000rpx;
}
.img{
  width: 100%;
  height: 100%;
  transform: scale(.8); 
  transition: .3s;
}
.active{
  transform: scale(1); 
}
